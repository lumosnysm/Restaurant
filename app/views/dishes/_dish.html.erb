<div class="caviar-menu-slides owl-carousel clearfix">
  <div class="caviar-portfolio clearfix">
    <div class="single_menu_item wow fadeInUp">
      <div class="d-sm-flex align-items-center">
        <div class="dish-thumb">
          <%= image_tag dish.image.url %>
        </div>
        <div class="dish-description">
          <h3><%= dish.name %></h3>
          <p><%= dish.description %></p>
          <% if current_user.admin? %>
            <%= link_to t(".delete"), dish, method: :delete,
              data: {confirm: t(".confirm")} %>
          <% end %>
        </div>
        <div class="dish-value">
          <h3><%= "#{Settings.money_symbol}#{dish.price}" %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
