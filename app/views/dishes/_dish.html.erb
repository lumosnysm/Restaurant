<div class="single_menu_item wow fadeInUp">
  <div class="d-sm-flex align-items-center">
    <div class="dish-thumb">
      <%= image_tag dish.image.url %>
    </div>
    <div class="dish-description">
      <h3><%= link_to dish.name, dish, class: "text-dark" %></h3>
      <p>
        <%= truncate dish.description, length: Settings.truncate_length %>
      </p>
    </div>
    <div class="dish-value">
      <h3><%= "#{Settings.money_symbol}#{dish.price}" %></h3>
      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :dish_id, value: dish.id %>
        <%= f.hidden_field :price_each, value: dish.price %>
        <%= f.hidden_field :quantity, value: 1 %>
        <%= f.submit t(".order"), class: "btn caviar-btn" %>
      <% end %>
    </div>
  </div>
</div>
