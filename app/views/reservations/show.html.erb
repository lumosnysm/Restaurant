<div class="bg-img bg-overlay hero1">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-12">
        <div class="breadcumb-content">
          <h2><%= t ".Your reservation" %></h2>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="caviar-reservation-area d-md-flex align-items-center" id="reservation">
  <div class="reservation-form-area d-flex justify-content-end p-5">
    <div class="reservation-form">
      <div class="section-heading">
        <h2><%= t ".reservation" %></h2>
      </div>
      <%= render "reservation_form" %>
    </div>
  </div>
  <div class="reservation-side-thumb wow fadeInRightBig" data-wow-delay="0.5s">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col"><%= t ".name" %></th>
          <th scope="col"><%= t ".price" %></th>
          <th scope="col"><%= t ".quantity" %></th>
          <th scope="col">#</th>
          <th scope="col">#</th>
        </tr>
      </thead>
      <tbody>
        <%= render @order_items %>
        <p>
          <%= t ".total" %>
          <%= number_to_currency current_order.total %>
        </p>
      </tbody>
    </table>
  </div>
</section>
