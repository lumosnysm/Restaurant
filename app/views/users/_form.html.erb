<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control rounded-0"%>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email" %>
    <%= f.text_field :email, class: "form-control rounded-0"%>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, class: "form-control rounded-0"%>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Password confirmation" %>
    <%= f.password_field :password_confirmation, class: "form-control rounded-0"%>
  </div>
  <%= f.submit t(".create_account"), class: "btn btn-outline-danger rounded-0 btn-block" %>
<% end %>
