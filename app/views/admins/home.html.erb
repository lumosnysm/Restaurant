<% provide :title, t(".title") %>
<div class="container mt-3">
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
      <a class="btn btn-outline-light" data-toggle="tab" href="#categories"
       aria-selected="true"><%= t ".categories" %></a>
    </li>
    <li class="nav-item">
      <a class="btn btn-outline-light" data-toggle="tab" href="#dishes"
       aria-selected="false"><%= t ".dishes" %></a>
    </li>
    <li class="nav-item">
      <a class="btn btn-outline-light" data-toggle="tab" href="#menus"
       aria-selected="false"><%= t ".menus" %></a>
    </li>
  </ul>
  <div class="tab-content border rounded shadow container-fluid">
      <div class="tab-pane fade show active" id="categories" role="tabpanel">
        <%= render "manage_categories" %></div>
      <div class="tab-pane fade" id="dishes" role="tabpanel">
        <%= render "manage_dishes" %></div>
      <div class="tab-pane fade" id="menus" role="tabpanel">
        ...</div>
  </div>
</div>
