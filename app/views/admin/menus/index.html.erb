<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".add_menu" %></h3>
      </div>
      <div class="card-block">
        <%= form_for @menu, url: admin_menus_path do |f| %>
          <fieldset>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.submit t(".submit"), class: "button-primary" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".menus" %></h3>
      </div>
      <div class="card-block">
        <table>
          <thead>
            <tr>
              <th><%= t ".name" %></th>
              <th><%= t ".dishes" %></th>
              <th>#</th>
              <th>#</th>
            </tr>
          </thead>
          <tbody>
            <%= render @menus %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
