<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".add_staffs" %></h3>
      </div>
      <div class="card-block">
        <%= form_for @staff, url: admin_staffs_path do |f| %>
          <%= hidden_field_tag :role_id, @role.id %>
          <fieldset>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :email %>
            <%= f.text_field :email %>
            <%= f.label :address %>
            <%= f.text_field :address, placeholder: t(".placeholder_description") %>
            <%= f.submit t(".submit"), class: "button-primary" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".staffs" %></h3>
      </div>
      <div class="card-block">
        <table>
          <thead>
            <tr>
              <th><%= t ".name" %></th>
              <th><%= t ".role" %></th>
              <th><%= t ".email" %></th>
              <th><%= t ".address" %></th>
              <th>#</th>
              <th>#</th>
            </tr>
          </thead>
          <tbody>
            <%= render @staffs %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
