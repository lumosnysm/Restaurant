<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".edit_role" %></h3>
      </div>
      <div class="card-block">
        <%= form_for @role, url: admin_role_path do |f| %>
          <fieldset>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :salary %>
            <%= f.number_field :salary %>
            <%= f.label :description %>
            <%= f.text_field :description %>
            <%= f.submit t(".submit"), class: "button-primary" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
