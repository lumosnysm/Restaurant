<%= form_for @category, url: admin_categories_path do |f| %>
<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".add_category" %></h3>
      </div>
      <div class="card-block">
        <fieldset>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.submit t(".submit"), class: "button-primary" %>
        </fieldset>
      </div>
    </div>
    <%= link_to_add_fields "Add dishes", f, :dishes %>
  </div>
</div>
<% end %>
<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".categories" %></h3>
      </div>
      <div class="card-block">
        <table>
          <thead>
            <tr>
              <th><%= t ".name" %></th>
              <th><%= t ".dishes" %></th>
              <th>#</th>
            </tr>
          </thead>
          <tbody>
            <%= render @categories %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
