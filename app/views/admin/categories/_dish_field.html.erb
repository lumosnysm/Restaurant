<div class="card">
  <div class="card-title">
    <h3><%= t ".dish" %></h3>
  </div>
  <div class="card-block">
    <fieldset>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :price %>
      <%= f.number_field :price %>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <%= f.label :image %>
      <%= f.file_field :image %><br/>
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy %>
    </fieldset>
  </div>
</div>
