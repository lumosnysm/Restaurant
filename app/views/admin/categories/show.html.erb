<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".add_dishes" %></h3>
      </div>
      <div class="card-block">
        <%= form_for @dish, url: admin_dishes_path do |f| %>
          <%= hidden_field_tag :category_id, @category.id %>
          <fieldset>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :price %>
            <%= f.number_field :price %>
            <%= f.label :description %>
            <%= f.text_area :description, placeholder: t(".placeholder_description") %>
            <%= f.label :image %>
            <%= f.file_field :image %>
            <%= f.submit t(".submit"), class: "button-primary" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row grid-responsive">
  <div class="column ">
    <div class="card">
      <div class="card-title">
        <h3><%= t ".dishes" %></h3>
      </div>
      <div class="card-block">
        <table>
          <thead>
            <tr>
              <th><%= t ".name" %></th>
              <th><%= t ".price" %></th>
              <th><%= t ".orders_this_month" %></th>
              <th><%= t ".orders_today" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @dishes %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
